####first need to clean FASTA file and replace any ambiguous nucleotides codes - Y - with valid ones

cp /gpfs01/home/mbygk5/individual_project/thaliana_SNP_analysis/Thaliana_genome.fas /gpfs01/home/mbygk5/individual_project/SLiM/Thaliana_genome_clean.fas

# Replace 'W' with 'A'
sed -i 's/W/A/g' /gpfs01/home/mbygk5/individual_project/SLiM/Thaliana_genome_clean.fas
# Replace 'R' with 'A'
sed -i 's/R/A/g' /gpfs01/home/mbygk5/individual_project/SLiM/Thaliana_genome_clean.fas
# Replace 'S' with 'C'
sed -i 's/S/C/g' /gpfs01/home/mbygk5/individual_project/SLiM/Thaliana_genome_clean.fas
# Replace 'Y' with 'C'
sed -i 's/Y/C/g' /gpfs01/home/mbygk5/individual_project/SLiM/Thaliana_genome_clean.fas
# Replace 'K' with 'T'
sed -i 's/K/T/g' /gpfs01/home/mbygk5/individual_project/SLiM/Thaliana_genome_clean.fas
# Replace 'M' with 'A'
sed -i 's/M/A/g' /gpfs01/home/mbygk5/individual_project/SLiM/Thaliana_genome_clean.fas
# Replace 'N' with 'A'
sed -i 's/N/A/g' /gpfs01/home/mbygk5/individual_project/SLiM/Thaliana_genome_clean.fas


